{
  "manifest_version": 3,
  "name": "Salesforce to ADO Connector",
  "version": "1.1.0",
  "author": {
    "email": "purna.padishala@gmail.com"
  },
  "description": "Retrieve metadata from Salesforce and push to Azure DevOps. Developed by Purnachandar Padishala.",
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.my.salesforce.com/*",
    "https://*.force.com/*",
    "https://dev.azure.com/*",
    "https://*.visualstudio.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SF ADO Connector",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}